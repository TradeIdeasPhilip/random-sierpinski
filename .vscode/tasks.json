{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: watch - tsconfig.json",
      "runOptions": {
        // Make sure that automatic tasks are enabled!
        // https://stackoverflow.com/a/53755091/971955
        "runOn": "folderOpen"
      }
    }
  ]
}
